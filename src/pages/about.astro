---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import ZigZag from '../components/ZigZag.astro';

const zigzagItems = [
    {
		href: "#",
        title: "About Me...",
        body: "I am a Computer Scientist that studies Physics and creates Art in my free time.",
		img: "../../regaliaPic.jpg",
    },
    {
		href: "#",
        title: "Art...",
        body: "My personal experience using art as a form of self expression and telling my story has informed the importance I put on displaying an artist's true vision as faithfully as possible.",
		img: "../../turtleSimplified.svg",
    },
	{
		href: "#",
        title: "Science...",
        body: " A University education gathering and manipulating data in Computer and Scientific fields has prepared me to ensure the safety and accuracy of your data as it is stored and manipulated across a full stack.",
		img: "../../particleAcc.jpg",
    },
	{
		href: "#",
        title: "Culture...",
        body: "A Multi-Cultural, American background allows us to empathically meet diverse needs with the respect and sensitivity deserved.",
		img: "../../powWow.jpg",
    },
];

let zigzagBool:boolean = true;
const zigOrZag = () => {
	if(zigzagBool == true){
		zigzagBool = false;
		return true;
	}else{
		zigzagBool = true;
		return false;
	}
}
