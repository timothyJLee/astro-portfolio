        style="margin-top: 10px; background-image: url(../../turtleLogo.svg);" >
        <p>Coming Soon...</p>
        {zigzagItems.map(item => (
			<ZigZag href={item.href} title={item.title} body={item.body} img={item.img} zigzag={zigOrZag()} />
		))}
        </div>
        <Footer />
    </main>
</Layout>
